<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.jbundle.config</groupId>
    <artifactId>jbundle-parent</artifactId>
    <version>1.0.6-SNAPSHOT</version>
  </parent>

  <!-- Note: I include the version and groups in each pom, becuase they will become archetypes -->
  <groupId>org.jbundle.util.webapp</groupId>
  <artifactId>jbundle-util-webapp-archetype</artifactId>
  <version>0.9.5-SNAPSHOT</version>

  <packaging>pom</packaging>
  <name>jbundle-util-webapp-archetype - archetype setup project</name>

  <build>
    <plugins>

      <plugin>
        <artifactId>maven-resources-plugin</artifactId>
        <executions>
          <execution>
            <id>copy-resources</id>
            <phase>process-resources</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.build.directory}/archetype</outputDirectory>
              <resources>
                <resource>
                  <directory>${basedir}/src/main/resources/jbundle-util-webapp-archetype-root</directory>
                  <filtering>false</filtering>
		          <excludes>
		            <exclude>.*</exclude>
		          </excludes>
                </resource>
              </resources>              
            </configuration>            
          </execution>

          <execution>
            <id>copy-resources-website</id>
            <phase>process-resources</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.build.directory}/archetype/website-archetype</outputDirectory>
              <resources>          
                <resource>
                  <directory>${basedir}/../website/target/generated-sources/archetype</directory>
                  <filtering>false</filtering>
		          <excludes>
		            <exclude>.*</exclude>
		          </excludes>
                </resource>
              </resources>              
            </configuration>            
          </execution>

          <execution>
            <id>copy-resources-files</id>
            <phase>process-resources</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.build.directory}/archetype/files-archetype</outputDirectory>
              <resources>          
                <resource>
                  <directory>${basedir}/../files/target/generated-sources/archetype</directory>
                  <filtering>false</filtering>
		          <excludes>
		            <exclude>.*</exclude>
		          </excludes>
                </resource>
              </resources>              
            </configuration>            
          </execution>

          <execution>
            <id>copy-resources-webdav</id>
            <phase>process-resources</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.build.directory}/archetype/webdav-archetype</outputDirectory>
              <resources>          
                <resource>
                  <directory>${basedir}/../webdav/target/generated-sources/archetype</directory>
                  <filtering>false</filtering>
		          <excludes>
		            <exclude>.*</exclude>
		          </excludes>
                </resource>
              </resources>              
            </configuration>            
          </execution>

          <execution>
            <id>copy-resources-redirect</id>
            <phase>process-resources</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.build.directory}/archetype/redirect-archetype</outputDirectory>
              <resources>          
                <resource>
                  <directory>${basedir}/../redirect/target/generated-sources/archetype</directory>
                  <filtering>false</filtering>
		          <excludes>
		            <exclude>.*</exclude>
		          </excludes>
                </resource>
              </resources>              
            </configuration>            
          </execution>

          <execution>
            <id>copy-resources-proxy</id>
            <phase>process-resources</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.build.directory}/archetype/proxy-archetype</outputDirectory>
              <resources>          
                <resource>
                  <directory>${basedir}/../proxy/target/generated-sources/archetype</directory>
                  <filtering>false</filtering>
		          <excludes>
		            <exclude>.*</exclude>
		          </excludes>
                </resource>
              </resources>              
            </configuration>            
          </execution>

          <execution>
            <id>copy-resources-cgi</id>
            <phase>process-resources</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.build.directory}/archetype/cgi-archetype</outputDirectory>
              <resources>          
                <resource>
                  <directory>${basedir}/../cgi/target/generated-sources/archetype</directory>
                  <filtering>false</filtering>
		          <excludes>
		            <exclude>.*</exclude>
		          </excludes>
                </resource>
              </resources>              
            </configuration>            
          </execution>

          <execution>
            <id>copy-resources-upload</id>
            <phase>process-resources</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.build.directory}/archetype/upload-archetype</outputDirectory>
              <resources>          
                <resource>
                  <directory>${basedir}/../upload/target/generated-sources/archetype</directory>
                  <filtering>false</filtering>
		          <excludes>
		            <exclude>.*</exclude>
		          </excludes>
                </resource>
              </resources>              
            </configuration>            
          </execution>

          <execution>
            <id>copy-resources-webstart</id>
            <phase>process-resources</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.build.directory}/archetype/webstart-archetype</outputDirectory>
              <resources>          
                <resource>
                  <directory>${basedir}/../webstart/target/generated-sources/archetype</directory>
                  <filtering>false</filtering>
		          <excludes>
		            <exclude>.*</exclude>
		          </excludes>
                </resource>
              </resources>              
            </configuration>            
          </execution>

        </executions>

      </plugin>

    </plugins>
  </build>

</project>
